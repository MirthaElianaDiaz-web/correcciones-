using namespace std;

int main() {

    PRODUCTOS productos[20];
    MARCA marcas[10];
    FORMAPAGO formas[5];
    bool salir = false;
    int opcion;

    do {
        opcion = mostrarmenu();
        elegiropcion(opcion, &salir, MARCA, PRODUCTOS, FORMAPAGO);
    } while (!salir);

